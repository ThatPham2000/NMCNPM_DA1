<!-- contact-section 
			================================================== -->
<section class="contact-section">
    <div class="container">
        <div class="contact-box">
            <div class="title-section">
                <h2>Đăng nhập</h2>
                <span>Đăng nhập để trải nghiệm nhiều tính năng với chất lượng tốt nhất</span>
            </div>
            <form id="reservation-form" method="POST">
                <div class="">
                    <label for="account">Tài khoản</label>
                    <input class="input_login" name="account" id="account" type="text" placeholder="Tên đăng nhập">
                </div>

                <div class="">
                    <label for="password">Mật khẩu</label>
                    <input class="input_login" name="pass" id="pass" type="password" placeholder="Mật khẩu">
                </div>

                <span style="color: red;">{{error}}</span>

                <div class="center-button">
                    <button class="button-two">Đăng nhập</button>
                    <a href="/users/register" class="button-one">Đăng ký</a>
                </div>
            </form>
        </div>

    </div>
</section>
<!-- End contact section -->

